<%- include("../../partials/tnp-story-header"); -%>
<div class="container justify-content-center" data-aos="fade-up">
    <div class="row">
      <div class="col">
        <div class="pic"><img src="../../images/contact/avatarwomen.png" class="img-fluid" alt="Img"></div>
        <h3><%= story.Name %></h3>
        <h3> Company: <%= story.CompanyPlaced %> </h3>
        <h4> Branch: <%= story.Branch %> </h4>
        <% if(story.CTC){ %>
        <h4>CTC: <%= story.CTC %></h4>         
        <% } %>
        <form action="/TNPPage/addStory/<%= story.Name %>/?_method=PATCH" method="POST">
            <!-- <input type="hidden" name="_method" value="PATCH"> -->
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
      <div class="col">
        <h3>Story: </h3>
        <% if( story.Story ){ %>
          <p> <%= story.Story %> </p>
        <% }else{ %>
          <p> Not Shared </p>
        <% } %>
        <h3>How to prepare: </h3>
        <p> <%= story.HowtoPrepare %> </p>
        <h3>Suggestions: </h3>
        <p> <%= story.Suggestions %> </p>
        
        <form action="/TNPPage/addStory/<%= story.Name %>/?_method=DELETE" method="post">
            <input type="hidden" value="null">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <div class="row justify-content-center">

    </div>
   </div>


